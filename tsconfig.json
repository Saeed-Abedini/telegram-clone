{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server.js",
    "src/schemas/locationSchema.js",
    "src/schemas/userSchema.js",
    "src/schemas/roomSchema.js",
    "src/schemas/namespaceSchema.js",
    "src/schemas/messageSchema.js",
    "src/db.js",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
